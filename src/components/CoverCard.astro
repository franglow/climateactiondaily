---
import { Image } from 'astro:assets';
const {
  src = '/images/climate-change.webp',
  alt = 'Cover of the book',
  eager = true,
} = Astro.props;

const sizes = "(min-width: 768px) 340px, 80vw";
---

<figure>
  <div class="w-full max-w-[240px] md:max-w-[340px] mx-auto overflow-hidden rounded-2xl shadow-[0_8px_30px_rgba(0,0,0,0.06)] ring-1 ring-base-line bg-white">
    <Image
      src={src}
      alt={alt}
      sizes={sizes}
      widths={[320, 480, 768, 1024]}
      width={768}
      height={1024}
      class="w-full h-auto object-contain"
      loading={eager ? 'eager' : 'lazy'}
      priority={eager}
    />
  </div>
</figure>