---
const retailers = Astro.props.retailers ?? [];
---
<div class="mt-8 flex flex-wrap gap-3">
  {retailers.map((r) => (
    <a
      href={r.url}
      class="px-4 py-2 rounded-xl border border-stone-300 bg-white hover:bg-stone-50"
      rel="noopener noreferrer"
    >
      {r.name}
    </a>
  ))}
</div>
