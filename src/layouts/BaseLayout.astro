---
import "../styles/tailwind.css";
const {
  title = 'Book Title – Author',
  description = 'Short description of the book',
  ogImage = '/og-default.jpg',
  lang = 'es'
} = Astro.props;
const domain = 'climateactiondaily.com';
---
<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Fonts with font-display: swap -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Libre+Baskerville:wght@400;700&display=swap" rel="stylesheet">

    <!-- Open Graph / Twitter -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />

    <link rel="icon" href="/favicon.ico" />

    <!-- Plausible (analytics) -->
    <script defer data-domain={domain} src="https://plausible.io/js/script.js"></script>
  </head>
  <body class="bg-stone-100 text-stone-900 font-sans">
    <main class="max-w-6xl mx-auto px-4">
      <slot />
    </main>
    <footer class="border-t border-stone-200 bg-stone-50 mt-12">
      <div class="max-w-6xl mx-auto px-4 py-8 text-sm text-stone-600">
        © {new Date().getFullYear()} Author • <a href="mailto:press@example.com" class="underline underline-offset-4">Prensa & derechos</a>
      </div>
    </footer>
  </body>
</html>
